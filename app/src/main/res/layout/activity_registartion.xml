<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/arrowback"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center|left"
        android:padding="5dp"
        android:text="Registration"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/referenceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Reference Id "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/referenceNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                android:visibility="gone"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/referenceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Referral Name "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="First Name * "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid First Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/middleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Middle Name * "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid First Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Last Name *"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Last Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:drawableStart="@drawable/mobile"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Mobile Number *"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid mobile Number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Email Address *"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Email" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black"
                app:passwordToggleEnabled="true">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/key"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Password *"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black"
                app:passwordToggleEnabled="true">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/key"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Confirm Password *"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/signIn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/updateborder"
                android:drawablePadding="50dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>