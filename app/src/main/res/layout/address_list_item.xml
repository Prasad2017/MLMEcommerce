<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/addressType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Home"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@color/main_orange_color"
                android:layout_weight="1"
                android:textColorHint="@color/light_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/optionsMenu"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/moreaddress" />

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserratregular"
            android:hint=""
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColorHint="@color/light_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/markAsDefaultLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/quantityback">

            <TextView
                android:id="@+id/markAsDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mark as default"
                android:fontFamily="@font/montserratmedium"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/markAsDefaultImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/tick"
                android:tint="@color/green_900"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>