<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:whatever="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/countryTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Select Country"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/quantityback" />

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Full Name * "
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quantityback"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Name" />


                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quantityback"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Mobile Number * "
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Mobile No" />

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/houseNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quantityback"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="House No * "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid House No" />

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/buildingName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quantityback"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Building Name * "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid House No" />

            <TextView
                android:id="@+id/stateTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Select State"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/quantityback" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/cityTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Select City"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/quantityback" />

            <TextView
                android:id="@+id/areatxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Select Area"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratmedium"
                android:background="@drawable/quantityback" />

        </LinearLayout>

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/landmark"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/quantityback"
                android:drawableTint="@color/light_black"
                android:fontFamily="@font/montserratmedium"
                android:hint="Landmark (Optional) "
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                whatever:emptyErrorString="Please Fill This"
                whatever:testErrorString="Enter Valid House No" />

        <TextView
            android:id="@+id/pincodeTxt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Select Pincode"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/montserratmedium"
            android:background="@drawable/quantityback" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/montserratmedium"
                android:padding="6dp"
                android:background="@drawable/quantityback"
                android:drawableTint="@color/black"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/workType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15sp"
                android:fontFamily="@font/montserratmedium"
                android:padding="6dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/quantityback"
                android:drawableTint="@color/black"
                android:drawableLeft="@drawable/ic_baseline_home_work_24"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/otherType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/montserratmedium"
                android:padding="6dp"
                android:layout_weight="1"
                android:background="@drawable/quantityback"
                android:drawableTint="@color/black"
                android:drawableLeft="@drawable/ic_baseline_not_listed_location_24"
                android:drawablePadding="10dp"/>



        </LinearLayout>

        <TextView
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/updateborder"
            android:drawablePadding="50dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>