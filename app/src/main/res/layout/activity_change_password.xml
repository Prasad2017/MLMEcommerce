<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forgotLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ForgotPassword">

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/arrowback"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserratmedium"
        android:gravity="center|left"
        android:padding="5dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:siRadius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Enter change the password"
                android:textColor="@color/light_black"
                android:textSize="14sp"
                android:textStyle="italic" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black"
                app:passwordToggleEnabled="true">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Password *"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black"
                app:passwordToggleEnabled="true">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Confirm Password *"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/submit"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/updateborder"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>